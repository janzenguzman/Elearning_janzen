<%= provide(:title, @title) %>
<h3><%= @title %></h3>
<div class="row mx-0">
    <% if @users.any? %>
        <% @users.each do |user| %>
            <div class="col-6 my-2">
                <div class="card">
                    <div class="card-body">
                        <div class="float-left">
                            <h4><%= link_to user.name, user %></h4>
                            <p><%= user.email %></p>
                        </div>
                        <% if current_user.is_admin && !user.is_admin %>
                            <%= link_to "Remove", user, method: :delete,
                                                        data: { confirm: "Are you sure?" },
                                                        class: "float-right" %>
                        <% end %>
                    </div>
                </div>
            </div>
        <% end %>
    <% else %>
        <h4>You have no <%= @title %>! Explore the site now.</h4>
    <% end %>
</div>