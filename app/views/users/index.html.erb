<div class="row pt-4 mx-0">
    <% @users.each do |user| %>
        <div class="col-6 my-2">
            <div class="card">
                <div class="card-body">
                    <h4><%= link_to user.name, user %></h4>
                    <p><%= user.email %></p>
                </div>
            </div>
        </div>
    <% end %>
</div>
