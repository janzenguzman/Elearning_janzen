<div class="row pt-4">
    <% @users.each do |user| %>
        <div class="col-6 my-2">
            <div class="card">
                <div class="card-body">
                    <div class="float-left">
                        <h4><%= link_to user.name, user %></h4>
                        <p><%= user.email %></p>
                    </div>
                    <% if current_user.is_admin && !user.is_admin %>
                        <%= link_to "Remove", user, method: :delete,
                                                    data: { confirm: "Are you sure?" },
                                                    class: "float-right" %>
                    <% end %>
                </div>
            </div>
        </div>
    <% end %>
</div>

<div>
    <%= will_paginate @users %>
</div>
