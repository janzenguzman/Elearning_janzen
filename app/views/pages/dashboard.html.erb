<% provide(:title, "Dashboard") %>
<div class="row py-4">
    <div class="col-4">
        <div class="card">
            <div class="card-header">User Information</div>
            <div class="card-body text-center">
                <div class="pb-4"><%= gravatar_for(current_user, "profile-large") %></div>
                <h3><%= current_user.name %></h3>
                <p><%= current_user.email %></p>
            </div>
        </div>
        <div class="card mt-4">
            <div class="card-header">User Stats</div>
            <div class="card-body text-center">
                <div class="row mt-2 mx-0">
                    <div class="col-6">
                        <a href="<%= following_user_path(current_user) %>">
                            <strong><%= current_user.following.count %></strong> following
                        </a>
                    </div>
                    <div class="col-6">
                        <a href="<%= followers_user_path(current_user) %>">
                            <strong><%= current_user.followers.count %></strong> followers
                        </a>
                    </div>
                </div>
            </div>
            <div class="card-body text-center">
                <%= link_to "#{current_user.answers.count} Word/s Learned", words_path, class: "btn btn-lg btn-info btn-block p-3" %>
            </div>
        </div>
    </div>
    <div class="col-8">
        <div class="card">
            <div class="card-header">Dashboard</div>
            <%= render "activities/activity" %>
        </div>

        <div class="mt-3">
            <%= will_paginate @activities %>
        </div>
    </div>
</div>
