<div class="container">
    <%= form_for ([:admin, @category]) do |f| %>
        <%= render "shared/alerts", object: f.object %>

        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>

        <%= f.label :description %>
        <%= f.text_area :description, class: "form-control" %>

        <%= f.submit btn_msg, class: "btn btn-block btn-primary mt-4" %>
    <% end %>
</div>