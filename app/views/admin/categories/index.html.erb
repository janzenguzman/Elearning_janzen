<div class="row my-4">
    <div class="col-12 col-md-6 text-center text-md-left"><h1>Admin | Categories</h1></div>
    <div class="col-12 col-md-6 align-self-center">
        <div class="d-flex justify-content-center justify-content-md-end">
            <%= link_to "Create new Category", new_admin_category_path, class: "btn btn-primary" %>
        </div>
    </div>
</div>
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th style="width: 20%;">Title</th>
                <th style="width: 50%;">Description</th>
                <th style="width: 10%;" class="text-center">Word/s</th>
                <th style="width: 20%;">Action</th>
            </tr>
        </thead>

        <tbody>
            <% @category.each do |cat| %>
                <tr>
                    <td style="width: 20%;"><%= link_to cat.title, admin_category_path(cat) %></td>
                    <td style="width: 50%;"><%= cat.description %></td>
                    <td style="width: 10%;" class="text-center"><%= cat.words.count %></td>
                    <td style="width: 20%;">
                        <%= link_to "Edit", edit_admin_category_path(cat), class: "btn btn-info" %>
                        <%= link_to "Delete", admin_category_path(cat), method: :delete,
                                                    data: { confirm: "Are you sure?" },
                                                    class: "btn btn-danger mt-1 mt-lg-0" %>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>

<div class="mt-3">
    <%= will_paginate @category %>
</div>
