<div class="container">
    <div class="d-flex justify-content-between align-items center mt-4">
        <h1>Create a word</h1>
        <%= link_to "Back", category_path(@word.category_id), class: "btn btn-link" %>
    </div>
    <%= form_for @word do |f| %>
        <%= f.hidden_field :category_id, :value => @word.category_id %>
        <%= f.label :word %>
        <%= f.text_field :word, class: "form-control" %>

        <%= f.submit "Create word", class: "btn btn-block btn-primary mt-4" %>
    <% end %>
</div>