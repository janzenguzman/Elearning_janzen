<div class="row my-5 mx-0">
    <%= render 'shared/left_layout' %>
    <div class="col-lg-6 mt-3 my-lg-auto mx-auto">
        <h2 class="text-center pb-4">Login</h2>
        <%= form_for :session, url: sessions_path, html: { class: 'form logged-out-form' } do |f| %>
            <div class="form-group">
                <%= f.email_field :email, class: "form-control", placeholder: "Email" %>
            </div>

            <div class="form-group">
                <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
            </div>
             
             <%= f.submit "Login", class: "btn btn-primary btn-block" %>
        <% end %>
    </div>
</div>