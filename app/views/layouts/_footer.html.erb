    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container justify-content-center">
            <span class="navbar-text w-100<% unless logged_in? %> mx-auto<% end %> px-3">
                &copy; 2020 
                <%=
                    link_to_if(logged_in?, "eLearning", { :controller => "users", :action => "dashboard" }) do
                        link_to("eLearning", { :controller => "sessions", :action => "new" })
                    end
                %>
            </span>
